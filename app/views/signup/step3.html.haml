= render partial: "sign_up_header"

.input_address
  .input_address__main
    .input_address__main__section
      %h2.input_address__main__section__title 発送元・お届け先住所入力
      = form_for @address, url: step4_signup_index_path do |f|
        .contents
          .contents-field
            = f.label :お名前
            %span.reqiure 必須
            %br/
            = f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "例）山田"
            = f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "例）彩"
            = render partial: 'error-messages_address', locals: {address: @address, column: "first_name"}
            = render partial: 'error-messages_address', locals: {address: @address, column: "last_name"}
          .contents-field
            = f.label :お名前カナ
            %span.reqiure 必須
            %br/
            = f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "例）ヤマダ"
            = f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "例）アヤ"
            = render partial: 'error-messages_address', locals: {address: @address, column: "first_name_kana"}
            = render partial: 'error-messages_address', locals: {address: @address, column: "last_name_kana"}
          .contents-field
            = f.label :郵便番号
            %span.reqiure 必須
            %br/
            = f.text_field :postal_code, autocomplete: "postal_code", placeholder: "例）123-4567"
            = render partial: 'error-messages_address', locals: {address: @address, column: "postal_code"}
          .contents-field
            = f.label :都道府県
            %span.reqiure 必須
            = fa_icon "chevron-down", class: "aicon-arrow-bottom"
            %br/
            = f.collection_select :prefecture_id, Prefecture.all, :id, :name, {include_blank: '--'}, class: 'prefecture'
            = render partial: 'error-messages_address', locals: {address: @address, column: "prefecture_id"}
          .contents-field
            = f.label :市区町村
            %span.reqiure 必須
            %br/
            = f.text_field :city, autocomplete: "city", placeholder: "例）横浜市緑区"
            = render partial: 'error-messages_address', locals: {address: @address, column: "city"}
          .contents-field
            = f.label :番地
            %span.reqiure 必須
            %br/
            = f.text_field :number, autocomplete: "number", placeholder: "例）青山1-1-1"
            = render partial: 'error-messages_address', locals: {address: @address, column: "number"}
          .contents-field
            = f.label :建物名
            %span.optional 任意
            %br/
            = f.text_field :building, autocomplete: "building", placeholder: "例）柳ビル103"
          .contents-field
            = f.label :電話
            %span.optional 任意
            %br/
            = f.text_field :phone_number, autocomplete: "phone_number", placeholder: "例）09012345678", class: 'phone_number'
          .contents-field__button
            = f.submit "次へ進む", class: "form__submit"
        
= render partial: "sign_up_footer"