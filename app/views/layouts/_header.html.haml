%header.header
  .wrapper
    .upper
      = link_to root_path, class: "upper__logo" do
        = image_tag("https://web-jp-assets.mercdn.net/_next/static/images/logo-acdd90ac4f472d5a6f7a330d33ab1225.svg", class: "upper__logo-image")
      = form_tag "", method: :get, class: "upper__form" do
        = text_field_tag :keyword, "", class: "upper__form_input", placeholder: "何かお探しですか？"
        = button_tag type: "submit",class: "upper__form_button" do
          %i.fa.fa-search.upper__form_button-icon
    .lower
      .lower__left
        .lower__left__category
          = link_to "" , class: "lower__left__category_search" do
            %i.fa.fa-bars.lower__left__category_search-icon
            %span.lower__left__category_search-text カテゴリーから探す
          .lower__left__category__box
            %ul.category__list1
              - @header_categories.each do |parent|
                %li.category__list1__item
                  = link_to "#{parent.name}", "", class: "category__list1__item_link"
                  %ul.category__list2
                    - parent.children.each do |children|
                      %li.category__list2__item
                        = link_to "#{children.name}", "", class: "category__list2__item_link"
                        %ul.category__list3
                          - children.children.each do |grand_children|
                            %li.category__list3__item
                            = link_to "#{grand_children.name}", "", class: "category__list3__item_link"
        .lower__left__brand
          = link_to "" , class: "lower__left__brand_search" do
            %i.fa.fa-tag.lower__left__brand_search-icon
            %span.lower__left__brand_search-text ブランドから探す
          .lower__left__brand__box
            %ul.brand__list
              %li.brand__list__item
                = link_to "シャネル", "" , class: "brand__list__item_link"
              %li.brand__list__item
                = link_to "ナイキ", "" , class: "brand__list__item_link"
              %li.brand__list__item
                = link_to "ルイ ヴィトン", "" , class: "brand__list__item_link"
              %li.brand__list__item
                = link_to "シュプリーム", "" , class: "brand__list__item_link"
              %li.brand__list__item
                = link_to "アディダス", "" , class: "brand__list__item_link"
              %li.brand__list__item
                = link_to "ブランド一覧", "" , class: "brand__list__item_link"

      - if user_signed_in?
        %ul.lower__right
        %li.lower__right__nice.lower__right_li
          = link_to  "", class: "lower__right__nice_link" do
            .lower__right__nice_link_img
              %i.fa.fa-heart
            いいね！一覧
        %li.lower__right__news.lower__right_li
          = link_to  "", class: "lower__right__news_link" do
            .lower__right__news_link_img
              %i.fa.fa-bell
            お知らせ
        %li.lower__right__to-do.lower__right_li
          = link_to  "", class: "lower__right__to-do_link" do
            .lower__right__to-do_link_img
              %i.fa.fa-check
            やることリスト
        %li.lower__right__mypage.lower__right_li
          = link_to  mypage_index_path, class: "lower__right__mypage_link" do
            = image_tag("https://static.mercdn.net/thumb/members/158882622.jpg?1572265146", class: "lower__right__mypage_link_img")
            マイページ
      - else
        .lower__right
          .lower__right__sign-up
            = link_to "新規会員登録", signup_index_path, class: "lower__right__sign-up_link"
          .lower__right__login
            = link_to "ログイン", new_user_session_path, class: "lower__right__login_link"

    = render "layouts/breadcrumbs", class: "breadcrumbs"
