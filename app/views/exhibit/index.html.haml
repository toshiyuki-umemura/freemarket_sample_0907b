.exhibit
  = render 'header' 

  .exhibit__contents
    .exhibit__contents__main
      .content
        .content__head
          商品の情報を入力

      .content
        .content__box__img
          .content__box__img__title-photos 
            出品画像
            .form_require 
              必須
          .explain 最大10枚までアップロードできます
          .content__box__img__select-img
            %label.select_1
              %input.select_img{type:"file", id:"select_img"}
              .content__box__dropbox
                .content__box__dropbox__form
                  ドラッグアンドドロップ
                  %br
                  またはクリックしてファイルをアップロード

      .content
        .content__box
          .content__box__title
            商品名
            .form_require 
              必須
          .content__box__text-field
            = fields_for @merchandise do |f|
              = f.text_field :name, class: 'input-form', placeholder: '商品名（必須40字まで）'

        .content__box__explain
          .content__box__title
            商品の説明
            .form_require 
              必須
          .content__box__text-area
            = fields_for @merchandise do |f|
              = f.text_area :description, class: 'input-text-form', placeholder: '商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。'

      .content
        .content__box
          .content__box__title
          .content__box__title__left
            .content__box__title__left-head
              商品の詳細
          .content__box__title__right
            .content__box
              .content__box__title
                カテゴリー
                .form_require 
                  必須
              .content__box__select-category
                .content__box__select-category__box
                  = fields_for @category do |f|
                    = f.select :name, ["---", "レディース", "メンズ", "ベビーグッズ", "インテリア・住まい・小物", "本・音楽・ゲーム", "おもちゃ・ホビーグッズ", "コスメ・香水・美容", "家電・スマホ・カメラ", "スポーツ・レジャー", "ハンドメイド", "チケット", "自動車・オートバイ", "その他"],{}, {class: "select"}
                  .icon
                    %i.fa.fa-angle-down

            .content__box-middle
              .content__box__title
                商品の状態
                .form_require 
                  必須

              .content__box__select
                .content__box__select__box
                  = fields_for @exhibit do |f|
                    = f.select :status, ["---", "新品、未使用", "未使用に近い", "目立った傷や,汚れなし", "やや傷や,汚れあり", "全体的に状態が悪い"]
                  .icon
                    %i.fa.fa-angle-down

      .content
        .content__box
          .content__box__title
          .content__box__title__left
            .content__box__title__left-head
              発送について
          .content__box__title__right
            .content__box1
              .content__box__title
                配送料の負担
                .form_require
                  必須
              .content__box__select-shipping_charge
                .content__box__select__box
                  = fields_for @delivery do |f|
                    = f.select :shipping_charge, ["---", "送料込み(出品者負担)", "着払い(購入者負担)"],{},{class: "select3"}
                  .icon
                    %i.fa.fa-angle-down

            .content__box-middle
              .content__box__title
                発送元の地域
                .form_require 
                  必須
              .content__box__select
                .content__box__select__box
                  = fields_for @delivery do |f|
                    = f.select :shipping_area, ["---",1,2,3,4,5,6,] #暫定。DBから引っ張れるようにしたい
                  .icon
                    %i.fa.fa-angle-down
                    
            .content__box-bottom
              .content__box__title
                発送までの日数
                .form_require 
                  必須
              .content__box__select
                .content__box__select__box
                  = fields_for @delivery do |f|
                    = f.select :shipping_date, ["---", "1~2日で発送", "2~3日で発送", "4~7日で発送"] 
                  .icon
                    %i.fa.fa-angle-down
      .content
        .content__box
          .content__box__title
          .content__box__title__left
            .content__box__title__left-head
              販売価格(300~9,999,999)
              = link_to "?" ,"https://www.mercari.com/jp/help_center/article/64/", class: "question"
          .content__box__title__right
            .content__box-price
              .content__box-price__left
                .content__box__title
                  価格
                  .form_require2
                    必須
              .content__box-price__right
                .content__box-price__right__yen
                  ¥
                .content__box-price__right__text-field-price
                  = fields_for @merchandise do |f|
                    = f.text_field :price, class: 'input-form', placeholder: '例）300', name: "price", id: "price", value: ""

            .content__box-fee
              .fee
                販売手数料（10%）
              .hyphen 
                = fields_for @merchandise do |f|
                  = f.text_field :fee, class: "sales-fee", id: "sales-fee", value: "-", disabled: "disabled" #←入力できないように
            .content__box-profit
              .content__box-profit-left
                販売利益
              .content__box-profit-right
                = fields_for :@merchandise do |f|
                  = f.text_field :price, class: "total-price", id: "total-price", type: "text", value: "-", disabled: "disabled" #←入力できないように
                  

      .content
        .content__caution
          %p 
            %span<> 禁止されている出品、行為
            を必ずご確認ください。
          %p
            またブランド品でシリアルナンバー等がある場合はご記載ください。
            %span<> 偽ブランドの販売
            は犯罪であり処罰される可能性があります。
          %p 
            また、出品をもちまして
            %span<> 加盟店規約
            に同意したことになります。
        .content-btn-exhibit
          = link_to "出品する", 'https://www.mercari.com/jp/', class: "text"
        .content-btn-back
          = link_to "もどる", 'https://www.mercari.com/jp/', class: "back"

  .exhibit__footer
    = render "footer"

